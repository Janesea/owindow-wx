<!--pages/setting/setting.wxml-->
<view class="container" style="background-color:#f5f5f5;">
  <view class="hx-ul-group" style="margin:40rpx 0;">
      <view class="hx-li" style="line-height:72rpx;height:72rpx;"
      bindtap="itemTapHandler" data-tag="history">
        <view style="float:left;height:72rpx;line-height:72rpx;">
            <image src="../../image/record.png" 
            style="width:40rpx;height:40rpx;margin:16rpx 20rpx;"></image>
        </view>
        <text style="font-size:15px;">播放历史</text>
        <view style="float:right;">
          <image src="../../image/arrow_right.png" style="width:24rpx;height:24rpx;margin:0 16rpx;"></image>
        </view>
       </view>
  </view>

  <view class="hx-ul-group" style="margin-bottom:40rpx">
    <view class="hx-li" style="line-height:72rpx;height:72rpx;"
    bindtap="itemTapHandler" data-tag="guide">
      <view style="float:left;height:72rpx;line-height:72rpx;">
        <image src="../../image/gesture.png" 
        style="width:40rpx;height:40rpx;margin:16rpx 20rpx;"></image>
      </view>

      <text style="font-size:15px;">操作说明</text>
      <view style="float:right;">
        <image src="../../image/arrow_right.png" 
        style="width:24rpx;height:24rpx;margin:0 16rpx;"></image>
      </view>
    </view>

    <view class="hx-li" 
    style="line-height:72rpx;height:72rpx;"
    bindtap="itemTapHandler" data-tag="download">
      <view style="float:left;height:72rpx;line-height:72rpx;">
        <image src="../../image/download.png"
        style="width:40rpx;height:40rpx;margin:16rpx 20rpx;"></image>
      </view>
      <text style="font-size:15px;">系统设置</text>
      <view style="float:right;">
        <image src="../../image/arrow_right.png" 
        style="width:24rpx;height:24rpx; margin:0 16rpx;"></image>
      </view>
    </view>
  </view>

  <view class="hx-ul-group">
    <view class="hx-li" 
    style="line-height:72rpx;height:72rpx;"
    bindtap="itemTapHandler" data-tag="about">
      <view style="float:left;height:72rpx;line-height:72rpx;">
        <image src="../../image/about.png" 
        style="width:40rpx;height:40rpx;margin:16rpx 20rpx;"></image>
      </view>

      <text style="font-size:15px;">关于作者</text>
      <view style="float:right">
        <image src="../../image/arrow_right.png"
        style="width:24rpx;height:24rpx;margin:0 16rpx;"></image>
      </view>
    </view>
  </view>
</view>
