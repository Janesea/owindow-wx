<!--pages/API/storage/storage.wxml-->
<import src="../common/header.wxml" />
<import src="../common/footer.wxml" />

<view class="container">
  <template is="header" data="{{title:'get/set/clearStorage'}}"></template>

  <view class="page-body">
    <view class="page-body-wrapper">
      <view class="page-body-form">
        <view class="page-body-form-item" style="border-bottom:none;">
          <input class="page-body-form-key" type="text" placeholder="key"
          name="key" value="{{key}}" bindinput="keyChange" />
          <input class="page-body-form-value" type="text" placeholder="data"
          name="data" value="{{data}}" bindinput="dataChange" />
        </view>
      </view>
      <view class="page-body-buttons">
        <button class="page-body-button" type="primary" bindtap="setStorage">存储数据</button>
        <button class="page-body-button" bindtap="getStorage">读取数据</button>
        <button class="page-body-button" bindtap="clearStorage">清理数据</button>
      </view>
    </view>
  </view>

  <modal title="{{dialog.title}}" hidden="{{dialog.hidden}}" no-cancel 
  bindconfirm="confirm">{{dialog.content}}</modal>

  <template is="footer"></template>
</view>
