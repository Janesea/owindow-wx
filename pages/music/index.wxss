/* pages/music/index.wxss */
.music-type-title{
  font-size: 24rpx;
  color: #1f1f1f;
}

.music-section{
   width: 25%;
   float:left;
   padding: 26rpx 0;
}

.music-section__ctn {
  margin: 0 auto;
  text-align: center;
}
.music-section__title{
  text-align: center;
  font-size: 20rpx;
  margin-top: 10rpx;
  color: #1f1f1f;
}
.music-section__ctn image{
   width: 40rpx; height: 40rpx;
}

.music-main{
  position:absolute;
  width:100%;
  height: 70%;
  background-color: black;
  color:white;
  margin:0 auto;
  text-align:center;
  justify-content:center;
  align-items:center;
  display:-webkit-flex;
}
.singer-pic{
  
  background-size:100%;
  border-radius:50%;
  border: 1px solid  #fff;
  transform:rotate(0deg);
  -ms-transform:rotate(0deg); 	/* IE 9 */
  -moz-transform:rotate(0deg); 	/* Firefox */
  -webkit-transform:rotate(0deg); /* Safari å’Œ Chrome */
  -o-transform:rotate(0deg);
}
.music-bottom{
    position: absolute;
    bottom:0rpx;
    width:100%;
    min-height: 30%;
    background:white;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}











.container-img{
  position:absolute;
  right:20rpx;
  z-index:2;
}
.container-imgset{
  width:40rpx; height:40rpx;
}
.music-main-view{
  width: 100%;  
}

.singer-pic{
  width: 420rpx;
  height:420rpx;
}
.view-song{
  font-size:15px;
  margin:20rpx 0;
}
.view-singer{
  font-size:11px;
}
.view-cur{
  color:#F7941D;
  font-size:11px;
  padding-top:20rpx;
}

.music-bottom-child{
  text-align:center;
  padding:16rpx 0;
  border-bottom:1px solid #eee;
}
.music-section-text{
  color:#F7941D;
}